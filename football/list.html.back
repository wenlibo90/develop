<script src="http://static.yuntongauto.com/js/cookie.js" type="text/javascript"></script>
<script src="js/base.js"></script>
<script>
    function compareDate(date){
        //对获得的时间戳区间与既定的时间戳进行比对
        var baseDate1='2018/06/14 00:00:00';
        var baseDate2='2018/07/15 23:00:00';
        baseDate1=new Date(baseDate1).getTime();
        baseDate2=new Date(baseDate2).getTime();
        if(date<=baseDate1){
            console.log(baseDate1)
            return baseDate1
        }else if(date>baseDate1 && date<=baseDate2){
            return date
        }else{
        $('.loadBox').html('<div class="loader">\n' +
                '        <div class="loader-inner pacman">\n' +
                '            <div></div>\n' +
                '            <div></div>\n' +
                '            <div></div>\n' +
                '            <div></div>\n' +
                '            <div></div>\n' +
                '        </div>\n' +
                '    </div>\n' +
                '    所有比赛都结束，不可竞猜').show()
        }
    }
  function init() {
      var time=new Date().getTime()
      time=compareDate(time)

      var data={
         "date":timeFormat(time)
         // "date":'2018-06-15 10:00:00'
      }
      console.log(data)
      setAjax('/footballGame/getGameByTime',data,saleList)
      setAjax('/footballGameGuess/selectPayManDesc',{},userShow)
  }
    function userShow(data) {
        if(data.success){
            var str='';
            $.each(data.result,function (i,v) {
                str += '<span style="padding-right: 120px">'+v+'</span>'
            })
            $('marquee').html(str)
        }else{
            $(".msg").html(data.message).stop().slideDown().delay(2000).slideUp()
        }
    }
      function saleList(data){
          console.log(data)
             if(data.success){
                 saleShow(data.result)
             }else{
                 $(".msg").html(data.message).stop().slideDown().delay(2000).slideUp()
             }
      }
      function saleShow(data) {
          var box=$('#sale')
          var box1=$('.sale1')
          var box2=$('.sale2')
          box.html('')
          box1.html('')
          box2.html('')
              if(!data.listOne){
                  $(".msg").html('没有可竞猜的场次').stop().slideDown().delay(2000).slideUp()
              }else{
                  //$('.mtime').html(timeFormat(data[0].gameTime).slice(5,-12)+'月'+timeFormat(data[0].gameTime).slice(8,-9)+'日赛程 <span>（点击场次进入竞猜页面）</span>')
                  if(data.timeOne && (data.listOne!=null)){
                      $('.mtime').html(timeFormat(data.timeOne).slice(5,-12)+'月'+timeFormat(data.timeOne).slice(8,-9)+'日赛程 <span>（点击场次进入竞猜页面）</span>')
                      $.each(data.listOne,function (i,v) {
                          box.append('<li><img src="images/vs_.png" class="imgVs animated tada"><a href="detail.html?id='+v.id+'"><i><img src="'+v.homePicture+'" width="130" height="130" /></i><span>'+v.homeTeam+'</span><i class="n-right"><img src="'+v.guestPicture+'" width="130" height="130" /></i><span class="n-right">'+v.guestTeam+'</span></a></li>')
                      })
                  }else{
                      box.html('没有可竞猜的场次')
                  }
                  if(data.timeTwo && (data.listTwo!=null)){
                      $('.mtime1').html(timeFormat(data.timeTwo).slice(5,-12)+'月'+timeFormat(data.timeTwo).slice(8,-9)+'日赛程 <span>（点击场次进入竞猜页面）</span>')
                      $.each(data.listTwo,function (i,v) {
                          box1.append('<li><img src="images/vs_.png" class="imgVs animated tada"><a href="detail.html?id='+v.id+'"><i><img src="'+v.homePicture+'" width="130" height="130" /></i><span>'+v.homeTeam+'</span><i class="n-right"><img src="'+v.guestPicture+'" width="130" height="130" /></i><span class="n-right">'+v.guestTeam+'</span></a></li>')
                      })
                  }else{
                      box1.remove()
                  }
                  if(data.timeThree && (data.listThree!=null)){
                      $('.mtime2').html(timeFormat(data.timeThree).slice(5,-12)+'月'+timeFormat(data.timeThree).slice(8,-9)+'日赛程 <span>（点击场次进入竞猜页面）</span>')
                      $.each(data.listThree,function (i,v) {
                          box2.append('<li><img src="images/vs_.png" class="imgVs animated tada"><a href="detail.html?id='+v.id+'"><i><img src="'+v.homePicture+'" width="130" height="130" /></i><span>'+v.homeTeam+'</span><i class="n-right"><img src="'+v.guestPicture+'" width="130" height="130" /></i><span class="n-right">'+v.guestTeam+'</span></a></li>')
                      })
                  }else{
                      box2.remove()
                  }
              }

      }
init();
    var flag=true;
//    活动规则
    $('.rule-btn').click(function () {
        $('.ruleList').show();
        if(!flag){
            $('.ruleList .close').hide()
            $('.ruleList .closeBtn').show()

        }else{
            $('.ruleList .closeBtn').hide()
        }
    })

    $('.ruleList .close').click(function () {
        $('.ruleList').hide();
        $('.animationDiv img:nth-child(2)').addClass('imgAn-3')
        $('.animationDiv img:nth-child(3)').addClass('imgAn-4')
        $('.animationDiv img:nth-child(4)').addClass('imgAn-5')
        flag=!flag;
    })
    $('.ruleList .closeBtn').click(function () {
        $('.ruleList').hide();
        $('.animationDiv img:nth-child(2)').addClass('imgAn-3')
        $('.animationDiv img:nth-child(3)').addClass('imgAn-4')
        $('.animationDiv img:nth-child(4)').addClass('imgAn-5')
    })

</script>
